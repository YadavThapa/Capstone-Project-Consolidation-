# Production Environment Variables for News Application
# Copy this file to .env and fill in your actual values

# Django Security
SECRET_KEY=your-super-secret-key-here-generate-new-one
DEBUG=False

# Domain Configuration
DOMAIN_NAME=yourdomain.com
BASE_URL=https://yourdomain.com

# Database Configuration
DB_NAME=news_db_prod
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# Email Configuration
EMAIL_HOST=smtp.mail.yahoo.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=News Application <your_email@example.com>
SERVER_EMAIL=your_email@example.com

# Social Media API Keys (Optional)
X_API_KEY=your_x_api_key_here
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Cache Configuration (Optional - Redis)
REDIS_URL=redis://127.0.0.1:6379/1

# Security Headers (for reverse proxy configuration)
SECURE_PROXY_SSL_HEADER_NAME=HTTP_X_FORWARDED_PROTO
SECURE_PROXY_SSL_HEADER_VALUE=https